{
  "name": "bustracker-hitl-portal",
  "private": true,
  "version": "0.1.0",
  "description": "Bus tracking portal with HITL monitoring, ads, taxi API, and showroom.",
  "scripts": {
    "dev": "concurrently -k -n server,client -c blue,green \"npm:dev-server\" \"npm:dev-client\"",
    "dev-server": "nodemon server/index.js",
    "dev-client": "npm --prefix client run dev",
    "build": "npm --prefix client run build",
    "start": "node server/index.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}